<h1>Responses for <%= @form.name %></h1>

<% if @responses.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Created By</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @responses.each_with_index do |response, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <% name_answer = response.answers.first %>
            <%= name_answer&.response_text || 'Unknown' %>
          </td>
          <td><%= response.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td>
            <%= link_to 'Show', form_response_path(@form, response), class: "btn btn-secondary btn-sm" %> |
            <%= link_to 'Edit', edit_form_response_path(@form, response), class: "btn btn-secondary btn-sm" %> |
            <%= link_to 'Delete', form_response_path(@form, response), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No responses available for this form.</p>
<% end %>

<%= link_to 'Back to Form', form_path(@form), class: "btn btn-secondary mt-3" %>
