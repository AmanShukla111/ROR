<% content_for :title, "Available Forms" %>

<h1>Available Forms</h1>

<% if @forms.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @forms.each_with_index do |form, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= form.name %></td>
          <td><%= form.description %></td>
          <td>
            <%= link_to "Show", form, class: "btn btn-secondary" %> |
            <%= link_to "Edit", edit_form_path(form), class: "btn btn-secondary" %> |
            <%= link_to "Destroy", form, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No forms available.</p>
<% end %>